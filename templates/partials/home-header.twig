<article class="site-header__featured-post">
    {% for news in featured_article %}
        <a class="featured-post-wrapper" href="{{ news.link }}">
            <h1 class="featured-title">{{ news.title }}</h1>

            <div class="featured-content">
                <p class="paragraph">{{ news.excerpt.read_more('') }}</p>

                <div class="info">
                    <p><strong>Author:</strong> {{ news.author.name }}</p>
                    <p><strong>Date:</strong> {{ news.date }}</p>
                </div>
            </div>
        </a>

        {% if news.image_or_video == 'image' %}
            <img src="{{ news.thumbnail.src }}" alt="{{ news.title }}" />
        {% else %}
            <video controls poster="{{ news.featured_video_poster.url }}" preload="none">
                <source src="{{ news.featured_video_url }}" type="video/mp4">
            </video>
        {% endif %}
    {% endfor %}
</article>
