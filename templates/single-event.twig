{% extends 'base.twig' %}

{% block content %}
<article class="post-layout">
    {% if post.image_or_video == 'image' %}
        <img class="post-image" src="{{ post.thumbnail.src }}" alt="{{ post.title }}" />
    {% endif %}

    {{ post.content }}

    <div class="share-bar">
        <p>Share on:</p>
        {{ fn('do_action', 'skv_post_intro') }}
    </div>
</article>
{% endblock %}
