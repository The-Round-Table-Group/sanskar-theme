{% extends 'base.twig' %}

{% block content %}
<section class="post-layout">
    <div class="social-tree-wrapper">
        {% for state in post.social_link_list %}
            <h3 class="city-name">{{ state.state_name }}</h3>

            <div class="social-grid">
                {% for social in state.links %}
                    <a class="social-link-card" href="{{ social.link.url }}" target="_blank" rel="noopener">
                        <span class="h5">{{ social.link.title }}</span>
                        <span class="fa-brands {{ social.icon }}"></span>
                    </a>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</section>
{% endblock %}
