{% extends 'base.twig' %}

{% block content %}
    <section class="post-block">
        <div class="post-block__page-header">
            <p class="h4">Filter by Tag</p>
            <div class="tag-filter">
                {{ fn('do_shortcode', '[facetwp facet="contest_tags"]') }}
            </div>
        </div>

        <div class="post-block__post-row facetwp-template">
            {% for contest in contests %}
                <a class="post-card" href="{{ contest.link }}">

                    {% if contest.card_image.url %}
                        <img src="{{ contest.card_image.url }}" alt="{{ contest.title }}" />
                    {% else %}
                        <img src="{{ contest.thumbnail.src }}" alt="{{ contest.title }}" />
                    {% endif %}

                    <h3 class="h4">{{ contest.title }}</h3>

                    <p class="excerpt">{{ contest.excerpt.read_more('') }}</p>

                    <p class="terms">
                        {% for term in contest.terms %}
                            <span class="term">{{ term.name }}</span>
                        {% endfor %}
                    </p>
                </a>
            {% endfor %}
        </div>
    </section>

    {{ post.content }}
{% endblock %}
